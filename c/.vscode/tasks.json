{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc-9 build active file",
			"command": "/usr/bin/gcc-9",
			"args": [
				"-g",
				"-Wall",
				"-pedantic",
				"${workspaceFolder}/*.c",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"--include-directory=/usr/include/glib-2.0/"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc-9"
		}
	]
}